# EditorConfig for dotfiles project
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts - use tabs with 2-space display width
[*.sh]
indent_style = tab
indent_size = 2
tab_width = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Config files
[*.{toml,ini,conf}]
indent_style = space
indent_size = 2
