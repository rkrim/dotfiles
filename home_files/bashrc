# ~/.bashrc
# sourced by bash(1) for non-login shells.

# Source shellenv for common functions
if [ -f ~/.shellenv ]; then
  source ~/.shellenv
fi

# Source Aliases file
if [ -f ~/.aliases ]; then
  source ~/.aliases
fi

# Source Token file
if [ -f ~/.shell_tokens ]; then
  source ~/.shell_tokens
fi

# Initialize bash environment
_bash_init_environment

# Initialize bash-preexec (must be early, before other tools that use preexec hooks)
_bash_init_preexec
